<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xiaomi.mimobile.milpatest.MainActivity">


    <EditText
        android:id="@+id/aid"
        android:layout_width="327dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="aid"
        android:inputType="none"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="203dp"
        android:layout_below="@+id/output"
        android:layout_alignStart="@+id/output" />

    <EditText
        android:id="@+id/input"
        android:layout_width="327dp"
        android:layout_height="100dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="input"
        android:inputType="none"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="203dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/output"
        android:layout_width="327dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/input"
        android:layout_below="@+id/input"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="output"
        android:inputType="none"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="203dp" />

    <Button
        android:id="@+id/send_by_telephony"
        android:layout_width="320dp"
        android:layout_height="41dp"
        android:onClick="sendByTelephony"
        android:text="send_by_telephony"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="405dp"
        android:layout_above="@+id/send_by_oma"
        android:layout_alignStart="@+id/aid"
        android:layout_marginBottom="30dp" />

    <Button
        android:id="@+id/send_by_oma"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:onClick="sendByOma"
        android:text="send_by_oma"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="450dp"
        android:layout_marginBottom="19dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/aid"
        android:layout_alignStart="@+id/send_by_telephony" />

</RelativeLayout>
